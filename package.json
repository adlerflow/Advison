{
  "name": "mcp-adler-tools",
  "version": "1.0.0",
  "description": "Custom MCP server for Adler's development tools",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "oauth-server": "node src/oauth-server.js",
    "oauth-dev": "nodemon src/oauth-server.js",
    "remote": "node src/remote/server.js",
    "remote:dev": "nodemon src/remote/server.js",
    "remote:build": "docker-compose build",
    "remote:up": "docker-compose up -d",
    "remote:down": "docker-compose down",
    "remote:logs": "docker-compose logs -f mcp-server",
    "db:migrate": "node scripts/migrate.js",
    "test": "node test.js",
    "test-oauth": "node test-oauth.js",
    "test:remote": "jest src/remote/**/*.test.js",
    "setup": "./setup.sh",
    "setup-oauth": "./setup-oauth.sh",
    "setup-remote": "./setup-remote.sh",
    "oauth-mcp": "node src/oauth-mcp-server.js",
    "setup-oauth-client": "node setup-oauth-client.js"
  },
  "keywords": [
    "mcp",
    "claude",
    "development-tools",
    "remote-server"
  ],
  "author": "Adler",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-ws": "^5.0.2",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.0",
    "prom-client": "^15.1.3",
    "redis": "^4.6.12",
    "winston": "^3.17.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "optionalDependencies": {
    "puppeteer": "^21.6.1",
    "sharp": "^0.33.1"
  }
}
